---
import { Image } from "astro:assets";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import Layout from "../../layouts/Layout.astro";
import HomeBackground from '../../assets/home-background.jpg'
import Section from "../../components/section.astro";
import SectionTitle from "../../components/section-title.astro";
import StackOrbit from "../../components/stack-orbit.astro";
import { skills } from "../../constants/skills";
import SkillItem from "../../components/skill-item.astro";
import ProjectCard from "../../components/project-card.astro";
import ExperienceItem from "../../components/experience-item.astro";

export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } }
  ]
}

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<Layout>
  <section class="w-full h-[calc(100vh-48px)] relative max-h-[600px]" id="home">
    <Image alt="" src={HomeBackground} class="h-full mx-auto min-w-fit right-0 w-full opacity-10 absolute"/>
    <div class="max-w-[1200px] mx-auto flex items-center gap-10 h-full px-6 lg:ps-24 lg:justify-start">
      <div class="lg:basis-2/3">
        <h1 class="uppercase text-4xl lg:text-6xl tracking-widest font-semibold mb-10 bg-gradient-to-r from-teal-600 to-teal-400 bg-clip-text text-transparent">{t('home.title')}</h1>
        <h2 class="text-4xl text-slate-100 font-light">Ariel Surco Acho</h2>
      </div>
      <div class="basis-1/3 items-center justify-center hidden lg:block">
        <StackOrbit 
          size={300}
          electronColor="#2dd4bf"
          nucleusColor="#0f766e"
          orbitColor="#5eead4"
        />
      </div>
    </div>
  </section>

  <div class="relative overflow-hidden">
    <div class="sections-container w-full h-full top-0 z-0 absolute"/>
    <main class="w-full max-w-[1200px] mx-auto flex flex-col gap-20 py-20">
      <Section id="experience">
        <SectionTitle>
          {t('experience.title')}
        </SectionTitle>
        <div class="max-w-[900px] px-8 w-full">
          <ExperienceItem
            jobTitle={t('experience.item-1.jobTitle')}
            company={t('experience.item-1.company')}
            startDate={new Date()}
            description={t('experience.item-1.description')}
          />
        </div>
      </Section>
      <Section id="about">
        <SectionTitle>
          {t('about.title')}
        </SectionTitle>
        <p>
          
        </p>
      </Section>
      <Section id="skills">
        <SectionTitle>
          {t('skills.title')}
        </SectionTitle>
        <div class="grid md:grid-cols-7 sm:grid-cols-5 grid-cols-4 gap-10 max-w-fit px-8">
          {skills.map((skill) => (
            <SkillItem src={skill.src} title={skill.title} />
          ))}
        </div>
      </Section>
      <Section id="projects">
        <SectionTitle>
          {t('projects.title')}
        </SectionTitle>
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-10">
          <ProjectCard
            title="Expenses Management"
            description="It's an app to manage your expenses and incomes, making periodic reports to care your finances."
            image="https://picsum.photos/200/300"
            demoLink="https://www.google.com"
            githubLink="https://www.google.com"
            technologies={['React', 'Next.js', 'Tailwind']}
          />
          <ProjectCard
              title="Expenses Management"
              description="It's an app to manage your expenses and incomes, making periodic reports to care your finances."
              image="https://picsum.photos/200/300"
              demoLink="https://www.google.com"
              githubLink="https://www.google.com"
              technologies={['React', 'Next.js', 'Tailwind']}
            />
          <ProjectCard
            title="Expenses Management"
            description="It's an app to manage your expenses and incomes, making periodic reports to care your finances."
            image="https://picsum.photos/200/300"
            demoLink="https://www.google.com"
            githubLink="https://www.google.com"
            technologies={['React', 'Next.js', 'Tailwind']}
          />
        </div>
      </Section>
      <Section id="contact">
        <SectionTitle>
          {t('contact.title')}
        </SectionTitle>
      </Section>
    </main>
  </div>
</Layout>

<style>
  .sections-container {
    background: rgb(4,47,46);
    background: radial-gradient(circle, rgba(4,47,46,1) 0%, rgba(27,29,30,1) 50%, rgba(23,23,23,1) 100%);
  }
</style>
