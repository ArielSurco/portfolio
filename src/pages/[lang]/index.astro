---
import { Image } from "astro:assets";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import Layout from "../../layouts/Layout.astro";
import HomeBackground from '../../assets/home-background.jpg'

export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } }
  ]
}

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<Layout>
  <section class="w-full h-[calc(100vh-48px)] relative max-h-[600px]" id="home">
    <Image alt="" src={HomeBackground} class="h-full mx-auto min-w-fit right-0 w-full opacity-10 absolute"/>
    <div class="max-w-[1200px] mx-auto flex items-center gap-10 h-full py-4 px-14">
      <div class="basis-2/3">
        <h1 class="uppercase text-6xl tracking-widest font-semibold mb-10 bg-gradient-to-r from-teal-600 to-teal-400 bg-clip-text text-transparent">{t('home.title')}</h1>
        <h2 class="text-xl text-slate-100 font-thin">{t('home.description')}</h2>
      </div>
    </div>
  </section>

  <div class="w-full max-w-[1200px] mx-auto">
    <section id="about" class="h-96 py-20 text-slate-100">
      <h2 class="text-4xl text-center font-semibold">
        {t('about.title')}
      </h2>
      <p>

      </p>
    </section>
    <section id="skills" class="h-96">
      <h2 class="text-2xl">
        {t('skills.title')}
      </h2>
    </section>
    <section id="projects" class="h-96">
      <h2 class="text-2xl">
        {t('projects.title')}
      </h2>
    </section>
    <section id="contact" class="h-96">
      <h2 class="text-2xl">
        {t('contact.title')}
      </h2>
    </section>
  </div>
</Layout>
