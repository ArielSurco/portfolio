---
import { Image } from "astro:assets";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import Layout from "../../layouts/Layout.astro";
import HomeBackground from '../../assets/home-background.jpg'
import Section from "../../components/section.astro";
import SectionTitle from "../../components/section-title.astro";

export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } }
  ]
}

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<Layout>
  <section class="w-full h-[calc(100vh-48px)] relative max-h-[600px]" id="home">
    <Image alt="" src={HomeBackground} class="h-full mx-auto min-w-fit right-0 w-full opacity-10 absolute"/>
    <div class="max-w-[1200px] mx-auto flex items-center gap-10 h-full py-4 px-14">
      <div class="basis-2/3">
        <h1 class="uppercase text-6xl tracking-widest font-semibold mb-10 bg-gradient-to-r from-teal-600 to-teal-400 bg-clip-text text-transparent">{t('home.title')}</h1>
        <h2 class="text-xl text-slate-100 font-thin">{t('home.description')}</h2>
      </div>
    </div>
  </section>

  <div class="w-full max-w-[1200px] mx-auto">
     <Section id="about">
      <SectionTitle>
         {t('about.title')}
      </SectionTitle>
      <p>
          
      </p>
    </Section>
    <Section id="skills">
      <SectionTitle>
        {t('skills.title')}
      </SectionTitle>
    </Section>
    <Section id="projects">
      <SectionTitle>
        {t('projects.title')}
      </SectionTitle>
    </Section>
    <Section id="contact">
      <SectionTitle>
        {t('contact.title')}
      </SectionTitle>
    </Section>
  </div>
</Layout>
