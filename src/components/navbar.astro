---
import { getLangFromUrl, useTranslations } from "../i18n/utils"
import LanguagePicker from "./language-picker.astro"

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

interface Link {
  name: string
  href: string
}

const links: Link[] = [
  {
    name: t('nav.home'),
    href: '#home'
  },
  {
    name: t('nav.about'),
    href: '#about'
  },
  {
    name: t('nav.skills'),
    href: '#skills'
  },
  {
    name: t('nav.projects'),
    href: '#projects'
  },
  {
    name: t('nav.contact'),
    href: '#contact'
  }
]
---

<nav class=" min-h-fit w-full text-white py-4 px-6 shadow-xl sticky top-0 z-10 backdrop-blur-sm">
  <div class="max-w-[1200px] flex gap-3 items-center justify-between w-full mx-auto">
    <div class="flex gap-6">
      {links.map((link) => (
        <a class="hover:text-slate-200 text-xl hover:underline decoration-transparent hover:decoration-teal-400 underline-offset-4 transition-all duration-500" href={link.href} >{link.name}</a>
      ))}
    </div>
    <LanguagePicker/>
  </div>
</nav>