---
import { getLinks } from "../constants/nav-links"
import { getLangFromUrl, useTranslations } from "../i18n/utils"
import BurgerMenu from "./burger-menu.astro"
import LanguagePicker from "./language-picker.astro"

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<header class=" min-h-fit w-full text-white py-4 px-6 shadow-xl sticky top-0 z-10 backdrop-blur-sm bg-neutral-900/80">
  <div class="max-w-[1200px] gap-3 items-center justify-between w-full mx-auto flex">
    <!-- Desktop links -->
    <nav class="hidden lg:flex gap-6">
      {getLinks(t).map((link) => (
        <a class="hover:text-slate-200 text-xl hover:underline decoration-transparent hover:decoration-teal-400 underline-offset-4 transition-all duration-500" href={link.href} >{link.name}</a>
      ))}
    </nav>

    <!-- Mobile menu -->
    <BurgerMenu />

    <LanguagePicker/>
  </div>
</header>