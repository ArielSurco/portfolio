---
import { Image } from 'astro:assets'

interface Props {
  src: string
  title: string
}

const { src, title } = Astro.props
---

<div class="flex flex-col items-center justify-between gap-4">
  <Image src={src} alt={title} width={50} height={50}/>
  <h3 class="text-slate-100">{title}</h3>
</div>
